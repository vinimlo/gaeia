---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProgressBar from '../../components/ProgressBar.astro';
import { getAllTopicos, getTopico, getTopicoTrilhas, getTopicosByTag } from '../../utils/trilhas';
import { renderMarkdownAsync } from '../../utils/markdown';
import type { Topico } from '../../types/trilhas';
import { url } from '../../utils/url';

export async function getStaticPaths() {
  const topicos = await getAllTopicos();
  return topicos.map(topico => ({
    params: { topico: topico.id },
  }));
}

const { topico: topicoId } = Astro.params;
const topico = await getTopico(topicoId);

if (!topico) {
  return Astro.redirect(url('/topicos'));
}

// Get trilhas that contain this topic
const topicoTrilhas = await getTopicoTrilhas(topicoId);

// Get related topics (same tags)
const relatedTopicos: Topico[] = [];
for (const tag of topico.tags.slice(0, 2)) {
  const tagTopicos = await getTopicosByTag(tag);
  for (const t of tagTopicos) {
    if (t.id !== topicoId && !relatedTopicos.find(r => r.id === t.id)) {
      relatedTopicos.push(t);
    }
    if (relatedTopicos.length >= 4) break;
  }
  if (relatedTopicos.length >= 4) break;
}

// Render markdown content
const renderedContent = await renderMarkdownAsync(topico.content);

// Level labels
const nivelLabels: Record<string, string> = {
  iniciante: 'Iniciante',
  intermediario: 'Intermediario',
  avancado: 'Avancado',
};

const nivelColors: Record<string, string> = {
  iniciante: 'text-complete-pulse bg-complete-pulse/15 border border-complete-pulse/30',
  intermediario: 'text-axon-amber bg-axon-amber/15 border border-axon-amber/30',
  avancado: 'text-alarm-red bg-alarm-red/15 border border-alarm-red/30',
};
---

<BaseLayout title={topico.titulo}>
  <article class="animate-fade-in">
    <!-- Breadcrumb -->
    <nav class="flex items-center gap-2 mb-6 text-sm">
      <a href={url('/topicos')} class="text-dim hover:text-synapse-cyan transition-colors">
        Topicos
      </a>
      <span class="text-dim">/</span>
      <span class="text-synapse-cyan">{topico.titulo}</span>
    </nav>

    <!-- Header -->
    <header class="mb-8">
      <div class="flex flex-wrap items-center gap-3 mb-4">
        <span class={`px-3 py-1 rounded-full text-sm font-medium ${nivelColors[topico.nivel]}`}>
          {nivelLabels[topico.nivel]}
        </span>
        <span class="text-dim text-sm flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          ~{topico.tempoEstimado} min
        </span>
        {topico.checklistItems.length > 0 && (
          <span class="text-dim text-sm flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            {topico.checklistItems.length} itens
          </span>
        )}
      </div>

      <h1 class="text-3xl md:text-4xl font-display font-bold text-bright mb-4">
        {topico.titulo}
      </h1>

      <!-- Tags -->
      <div class="flex flex-wrap gap-2 mb-6">
        {topico.tags.map(tag => (
          <a
            href={url(`/topicos?tag=${tag}`)}
            class="px-3 py-1 rounded-full bg-star-dust/20 text-sm text-dim hover:bg-star-dust/30 hover:text-bright transition-colors"
          >
            {tag}
          </a>
        ))}
      </div>

      <!-- Progress (will be hydrated client-side) -->
      <div class="mt-6" data-topico-progress={topico.id}>
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm text-dim">Progresso do Topico</span>
          <span class="text-sm font-medium text-synapse-cyan">0%</span>
        </div>
        <ProgressBar value={0} />
      </div>
    </header>

    <!-- Appears in Trilhas -->
    {topicoTrilhas.trilhas.length > 0 && (
      <section class="mb-8 glass-card p-4 rounded-lg">
        <p class="text-sm text-dim mb-3 flex items-center gap-2">
          <svg class="w-4 h-4 text-dendrite-violet" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Este topico aparece nas seguintes trilhas:
        </p>
        <div class="flex flex-wrap gap-2">
          {topicoTrilhas.trilhas.map(({ trilha, modulo }) => (
            <a
              href={url(`/trilhas/${trilha.id}/${topico.id}`)}
              class="inline-flex items-center gap-2 px-3 py-2 rounded-lg bg-deep-space/50 border border-star-dust/20 hover:border-synapse-cyan/30 transition-colors"
            >
              <span class="text-bright text-sm">{trilha.nome}</span>
              <span class="text-xs text-dim">({modulo.nome})</span>
              <svg class="w-4 h-4 text-dim" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- Prerequisites -->
    {topico.prerequisitos.length > 0 && (
      <section class="mb-8 glass-card p-4 rounded-lg bg-axon-amber/5 border-axon-amber/30">
        <p class="text-sm text-axon-amber mb-3 flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          Pre-requisitos recomendados:
        </p>
        <div class="flex flex-wrap gap-2">
          {topico.prerequisitos.map(prereqId => (
            <a
              href={url(`/topicos/${prereqId}`)}
              class="inline-flex items-center gap-1 px-3 py-1 rounded-full bg-axon-amber/10 text-axon-amber text-sm hover:bg-axon-amber/20 transition-colors"
            >
              {prereqId}
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- Content -->
    <div class="markdown-content mb-8" set:html={renderedContent} />

    <!-- Related Topics -->
    {relatedTopicos.length > 0 && (
      <section class="mt-12">
        <h2 class="text-xl font-display font-semibold mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-dendrite-violet" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
          </svg>
          Topicos Relacionados
        </h2>
        <div class="grid gap-3 md:grid-cols-2">
          {relatedTopicos.map(related => (
            <a
              href={url(`/topicos/${related.id}`)}
              class="glass-card p-4 rounded-lg hover:border-synapse-cyan/30 transition-colors group"
            >
              <h3 class="font-medium text-bright group-hover:text-synapse-cyan transition-colors mb-1">
                {related.titulo}
              </h3>
              <div class="flex items-center gap-2 text-xs text-dim">
                <span class={nivelColors[related.nivel].split(' ')[0]}>
                  {nivelLabels[related.nivel]}
                </span>
                <span>~{related.tempoEstimado} min</span>
              </div>
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- Back to Library -->
    <nav class="mt-12 pt-8 border-t border-star-dust/50">
      <a
        href={url('/topicos')}
        class="flex items-center gap-2 text-dim hover:text-synapse-cyan transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Voltar para Biblioteca
      </a>
    </nav>
  </article>
</BaseLayout>

<script>
  // Import progress tracking
  import { recordActivity } from '../../utils/progressStore';
  // Import interactive checklist for inline hydration
  import '../../scripts/interactive-checklist';

  // Record activity when visiting a topic
  recordActivity();
</script>
