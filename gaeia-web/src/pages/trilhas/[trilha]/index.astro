---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ProgressBar from '../../../components/ProgressBar.astro';
import { getAllTrilhas, getTrilha, getTrilhaTopicos, getTrilhaTopicoIds } from '../../../utils/trilhas';
import type { Trilha, Topico } from '../../../types/trilhas';
import { url } from '../../../utils/url';

export async function getStaticPaths() {
  const trilhas = await getAllTrilhas();
  return trilhas.map(trilha => ({
    params: { trilha: trilha.id },
  }));
}

const { trilha: trilhaId } = Astro.params;
const trilha = await getTrilha(trilhaId);

if (!trilha) {
  return Astro.redirect(url('/trilhas'));
}

const topicos = await getTrilhaTopicos(trilhaId);

// Create a map of topic ID to topic for quick lookup
const topicosMap = new Map<string, Topico>();
topicos.forEach(t => topicosMap.set(t.id, t));

// Level labels
const nivelLabels: Record<string, string> = {
  iniciante: 'Iniciante',
  intermediario: 'Intermediario',
  avancado: 'Avancado',
};

const nivelColors: Record<string, string> = {
  iniciante: 'text-complete-pulse bg-complete-pulse/20',
  intermediario: 'text-axon-amber bg-axon-amber/20',
  avancado: 'text-alarm-red bg-alarm-red/20',
};

// Calculate stats
const totalTopicos = getTrilhaTopicoIds(trilha).length;
const totalMinutos = topicos.reduce((sum, t) => sum + t.tempoEstimado, 0);
const totalHoras = Math.round(totalMinutos / 60);
---

<BaseLayout title={trilha.nome}>
  <div class="space-y-10 animate-fade-in">
    <!-- Header -->
    <header>
      <div class="flex items-center gap-2 mb-4">
        <a href={url('/trilhas')} class="text-dim hover:text-synapse-cyan transition-colors text-sm">
          Trilhas
        </a>
        <span class="text-dim">/</span>
        <span class="text-synapse-cyan text-sm">{trilha.nome}</span>
      </div>

      <div class="flex items-start gap-4 mb-6">
        <div class="w-16 h-16 rounded-xl bg-synapse-cyan/20 flex items-center justify-center flex-shrink-0">
          <svg class="w-8 h-8 text-synapse-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
          </svg>
        </div>
        <div>
          <h1 class="text-3xl md:text-4xl font-display font-bold text-bright mb-2">
            {trilha.nome}
          </h1>
          <p class="text-dim text-lg">
            {trilha.descricao}
          </p>
        </div>
      </div>

      <!-- Stats -->
      <div class="flex flex-wrap items-center gap-4 mb-6">
        <span class={`px-3 py-1 rounded-full text-sm font-medium ${nivelColors[trilha.nivel]}`}>
          {nivelLabels[trilha.nivel]}
        </span>
        <span class="text-dim text-sm flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          {totalTopicos} topicos
        </span>
        <span class="text-dim text-sm flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          ~{totalHoras}h estimadas
        </span>
        <span class="text-dim text-sm flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          {trilha.modulos.length} modulos
        </span>
      </div>

      <!-- Progress -->
      <div class="glass-card p-4 rounded-lg" data-trilha-progress={trilha.id}>
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm text-dim">Progresso da Trilha</span>
          <span class="text-sm font-medium text-synapse-cyan">0/{totalTopicos} topicos</span>
        </div>
        <ProgressBar value={0} height={8} />
      </div>
    </header>

    <!-- Modules -->
    <section class="space-y-6">
      {trilha.modulos.map((modulo, moduloIndex) => {
        const moduloTopicos = modulo.topicos.map(id => topicosMap.get(id)).filter(Boolean) as Topico[];

        return (
          <div class="glass-card rounded-xl overflow-hidden">
            <!-- Module Header -->
            <div class="p-4 border-b border-star-dust/30 bg-nebula/50">
              <div class="flex items-center gap-3">
                <span class="w-8 h-8 rounded-lg bg-dendrite-violet/20 text-dendrite-violet flex items-center justify-center text-sm font-medium">
                  {moduloIndex + 1}
                </span>
                <div>
                  <h2 class="font-display font-semibold text-bright">
                    {modulo.nome}
                  </h2>
                  <p class="text-sm text-dim">
                    {modulo.descricao}
                  </p>
                </div>
              </div>
            </div>

            <!-- Topics List -->
            <div class="divide-y divide-star-dust/20">
              {moduloTopicos.map((topico, topicoIndex) => (
                <a
                  href={url(`/trilhas/${trilha.id}/${topico.id}`)}
                  class="flex items-center gap-4 p-4 hover:bg-star-dust/10 transition-colors group"
                  data-topico-id={topico.id}
                >
                  <span
                    class="w-6 h-6 rounded-full border-2 border-star-dust/50 flex items-center justify-center text-xs text-dim group-hover:border-synapse-cyan/50 transition-colors"
                    data-topico-status={topico.id}
                  >
                    {topicoIndex + 1}
                  </span>

                  <div class="flex-1 min-w-0">
                    <h3 class="font-medium text-bright group-hover:text-synapse-cyan transition-colors">
                      {topico.titulo}
                    </h3>
                    <div class="flex items-center gap-3 text-xs text-dim mt-1">
                      <span>~{topico.tempoEstimado} min</span>
                      <span class="flex items-center gap-1">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                        </svg>
                        {topico.checklistItems.length} itens
                      </span>
                    </div>
                  </div>

                  <svg class="w-5 h-5 text-dim group-hover:text-synapse-cyan transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              ))}
            </div>
          </div>
        );
      })}
    </section>

    <!-- Badges Section -->
    {trilha.badges.length > 0 && (
      <section class="glass-card p-6 rounded-xl">
        <h3 class="font-display font-semibold text-bright mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-axon-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
          </svg>
          Conquistas desta Trilha
        </h3>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {trilha.badges.map((badge) => (
            <div class="text-center p-4 rounded-lg bg-deep-space/50 border border-star-dust/20">
              <div class="text-3xl mb-2 opacity-50">
                {badge.icone === 'microscope' && 'üî¨'}
                {badge.icone === 'calculator' && 'üßÆ'}
                {badge.icone === 'building' && 'üèóÔ∏è'}
                {badge.icone === 'graduation-cap' && 'üéì'}
                {badge.icone === 'wrench' && 'üîß'}
              </div>
              <h4 class="font-medium text-dim text-sm">{badge.nome}</h4>
              <p class="text-xs text-faint mt-1">{badge.descricao}</p>
            </div>
          ))}
        </div>
      </section>
    )}
  </div>
</BaseLayout>

